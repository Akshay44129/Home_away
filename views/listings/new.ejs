<% layout("/layouts/boilerplate") %>
   
    <div class="row">
     
      <div class="col-8 offset-2">
        <br> <br>
        <h3>Create a New Listing</h3>
        
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div>
        <label for="title" class="form-lable">Title</label>
        <input class="form-control"
         name="listing[title]"
          placeholder="Add a catchy title" 
          type="text" 
          class="form-control"
          required
          />

          <div class="valid-feedback">
            Title Looks good
          </div>
      </div>
      
      <br>
       <div class="mb-3">
        <label for="description" class="form-lable">description</label>
        <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">
        Please description
      </div>
      <div class="valid-feedback">
        nice description 
      </div>
       </div>
      
      <div class="mb-3">
        <label for="image" class="form-lable">Image link</label>
        <input
        class="form-control"
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
      />
      </div>
    
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input class="form-control" name="listing[price]" placeholder="1200"
          required
          type="number" />
          <div class="invalid-feedback">
            please enter a valid price
          </div>
          <div class="valid-feedback">
            Price looks nice !
          </div>
        </div>
  
  
      <div class="mb-3 col-md-8">
        <label for="country" class="form-lable">Country</label>
        <input class="form-control" name="listing[country]" placeholder="india" type="text"
        required />
        <div class="invalid-feedback">
          Please enter the country name 
        </div>
      </div>
      </div>
      
     <div class="mb-3">
      <label for="location" class="form-lable">Location</label>
      <input
      class="form-control"
     name="listing[location]"
        placeholder="jaipur,rajsthan"
        type="text"
        required
      />

      <div class="invalid-feedback">
        Location shoud be valid
      </div>
     </div>
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br><br>
    </form>
  </div>